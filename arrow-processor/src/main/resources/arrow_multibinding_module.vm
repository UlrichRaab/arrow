package ${packageName};

import java.util.Map;
import dagger.Binds;
import dagger.Module;
import dagger.multibindings.IntoMap;
import dagger.multibindings.Multibinds;

import de.ulrichraab.arrow.Injector;
import de.ulrichraab.arrow.InjectorKey;

/**
 * Add this module to your application component.
 */
@Module(subcomponents = {
#foreach($arrowInjector in $arrowInjectors)
    $arrowInjector#if( $foreach.hasNext ),#end
#end

})
public abstract class ${className} {

    @Multibinds
    public abstract Map<Class<?>, Injector.Builder<?>> injectorBuilderProviders ();

#foreach($method in $arrowInjectorBindingMethods)
    @Binds
    @IntoMap
    @InjectorKey(${method.classKey})
    public abstract Injector.Builder<?> ${method.name} (${method.builder} injectorBuilder);
#end
}
